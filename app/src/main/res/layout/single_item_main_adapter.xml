<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_adapter_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_adapter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/main_adapter_image_view"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:scaleType="fitXY"
            android:src="@drawable/book_cover_1"
            android:contentDescription="@string/todo"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_adapter_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/main_adapter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remain"
                android:textSize="@dimen/_20ssp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="@font/bamshad"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>