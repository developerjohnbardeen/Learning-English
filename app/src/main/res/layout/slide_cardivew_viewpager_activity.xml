<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:fitsSystemWindows="true">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/slide_cardview_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/slide_cardview_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">



            <RelativeLayout
                android:id="@+id/slide_cardview_layout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <ImageView
                    android:id="@+id/slide_review_launcher"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_bookmark_24"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="3dp"
                    android:contentDescription="@string/todo" />

                <RelativeLayout
                    android:id="@+id/slide_cardview_tab_layout_bck_bttn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    tools:ignore="RelativeOverlap">

                    <ImageView
                        android:id="@+id/slide_cardview_img_back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/slide_cardview_tab_layout_txt_back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_toEndOf="@+id/slide_cardview_img_back_btn"
                        android:layout_alignBottom="@+id/slide_cardview_img_back_btn"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:text="@string/back"
                        android:visibility="visible"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/slide_card_view_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/unit"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/slide_cardview_unit_selected_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:layout_toEndOf="@+id/slide_card_view_unit"
                        android:layout_marginStart="2dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/slide_cardview_title_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_list"
                        android:layout_toEndOf="@+id/slide_cardview_unit_selected_number"/>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/tab_layout_crs_menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/vertical_dot"
                    android:contentDescription="@string/todo" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slide_card_view_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_word_detailed_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/word_detail_all_translate_btn">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <Button
                            android:id="@+id/easy_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="40dp"
                            android:text="@string/i_know"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginStart="3dp"
                            android:backgroundTint="#55C305"
                            android:stateListAnimator="@null"/>

                        <Button
                            android:id="@+id/hard_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="40dp"
                            android:text="@string/need_to_review"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@+id/easy_button"
                            android:backgroundTint="#FD4949"
                            android:gravity="center"
                            android:stateListAnimator="@null"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.jackandphantom.circularimageview.RoundedImage
                        android:id="@+id/word_detailed_card_ply_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mx_play_normal"
                        android:layout_centerVertical="true"/>

                    <SeekBar
                        android:id="@+id/word_detailed_music_seek_bar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.SeekBar"
                        android:layout_toEndOf="@+id/word_detailed_card_ply_image"
                        android:layout_toStartOf="@+id/word_detailed_progress_time_text"
                        android:layout_centerVertical="true"/>


                    <TextView
                        android:id="@+id/word_detailed_progress_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_time"
                        android:textSize="12sp"
                        android:layout_toStartOf="@+id/word_detailed_divider_text"
                        android:layout_centerVertical="true"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/word_detailed_divider_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:layout_toStartOf="@+id/word_detailed_audio_total_time_text"
                        android:gravity="center"
                        android:text="@string/divide_1"/>


                    <TextView
                        android:id="@+id/word_detailed_audio_total_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_time"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"/>

                </RelativeLayout>



            </LinearLayout>

            <ImageButton
                android:id="@+id/word_detail_all_translate_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/translate_text"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_word_detailed_baseline_translate_24"
                android:stateListAnimator="@null"
                android:backgroundTint="#D3CFCF"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/todo"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/indicator_view_pager"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                app:tabIndicator="@drawable/line_indicator"
                app:tabIndicatorColor="#0FDD17"
                app:tabGravity="fill"
                android:layout_gravity="bottom"
                app:tabIndicatorGravity="top"
                android:visibility="visible"
                android:layout_marginTop="2dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>